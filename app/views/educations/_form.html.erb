<%= form_for @education do |f| %>
  <div class="form-group">
    <%= f.label :place %>
    <%= f.text_field :place, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= f.label :study_focus, class: "form-check-label" %>
    <%= f.text_field :study_focus %>
  </div>
  <div class="form-group form-check">
    <%= f.label :show, class: "form-check-label" %>
    <%= f.check_box :show %>
  </div>

  <%= f.submit :submit, class: "btn btn-dark" %>

<% end %>